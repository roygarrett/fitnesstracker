<p style="color: green"><%= notice %></p>
<h1><%= @workout_type.name %> - Exercises</h1>
<div class="mt-3" id="exercises">
  <ul>
    <% @exercises.each do |t| %>
      <li><%= link_to t.name, workout_type_exercise_path(@workout_type, t) %></li>
    <% end %>
  </ul>
</div>

<%= link_to "New Exercise", new_workout_type_exercise_path(@workout_type) %>
