<h1 class="mt-3"><%= @day %></h1>
<div class="mt-3">
  <div class="card">
    <h2>Meals</h2>
    <table class="table table-striped table-bordered">
      <thead>
        <th scope="col">Name</th>
        <th scope="col">Calories</th>
      </thead>
      <tbody>
        <% current_user.meals.where(:date => @day).each do |m| %>
          <tr>
            <td><%= link_to m.name, meal_path(m) %></td>
            <td><%= m.calories %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="mt-3">
  <div class="card">
  <h2>Workouts</h2>
  <table class="table table-striped table-bordered">
    <thead>
      <th scope="col">Routine</th>
      <th scope="col">Minutes</th>
    </thead>
    <tbody>
      <% current_user.workouts.where(:date => @day).each do |w| %>
        <tr>
          <td><%= link_to w.workout_type.name, workout_path(w) %></td>
          <td><%= w.minutes %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
