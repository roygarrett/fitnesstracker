<p style="color: green"><%= notice %></p>
<h1 class="mt-3">Dashboard</h1>
<div class="mt-3" id="dashboard">
  <table class="table table-striped table-bordered">
    <thead>
      <th scope="col">Date</th>
      <th scope="col">Calorie Intake</th>
      <th scope="col">Active Minutes</th>
    </thead>
    <tbody>
      <% curr_date = Date.today + 1.day %>
      <% while curr_date != Date.today - 365.days %>
        <% if Meal.where(:date => curr_date).count > 0 || Workout.where(:date => curr_date).count > 0 %>
          <tr>
            <td><%= link_to curr_date, day_path(curr_date.to_s) %></td>
            <td><%= Meal.where(:date => curr_date).sum(:calories) %></td>
            <td><%= Workout.where(:date => curr_date).sum(:minutes) %></td>
          </tr>
        <% end %>
        <% curr_date -= 1.day %>
      <% end %>
    </tbody>
  </table>
</div>
